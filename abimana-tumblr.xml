<!-- The Modal -->
<div id="myModal" class="modal">
    <div id="modalClose" class="modal-close"></div>
    <img id="modalImage" class="modal-content">
</div>

<!-- Modal Image -->        
<script>
//Adding 'lightbox' class to every image in post
var divs = document.querySelectorAll('.tmblr-full img');
for (var i = 0; i < divs.length; i++) {
    divs[i].classList.add('lightbox');
}

// create references to the modal...
var modal = document.getElementById('myModal');
// to all images -- note I'm using a class!
var images = document.getElementsByClassName('lightbox');
// the image in the modal
var modalImg = document.getElementById("modalImage");

// Go through all of the images with our custom class
for (var i = 0; i < images.length; i++) {
  var img = images[i];
  // and attach our click listener for this image.
  img.onclick = function(evt) {
    modal.style.display = "block";
    modalImg.src = this.src;
    captionText.innerHTML = this.alt;
  }
}

// the image in the modal
var closeModal = document.getElementById("modalClose");

closeModal.onclick = function() {
  modal.style.display = "none";
}
</script>

<!-- Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js">
</script>
