    <style type="text/css">
    body {
        color: {color:Text};
        background-color: {color:Background};
        font-family: {font:Body};
        font-size: 15px;
    }
    
.outer-wrapper {
    max-width: 1040px;
    margin: 36px auto;
    position: relative;
    display: flex;
    flex-flow: row wrap;
}

main {
    padding-top: 40px;
}

a {
    color : {color:Link};
}

a:hover {
    color : {color:Link hover};
    text-decoration: none;
}

aside {
    padding-top: 40px;
    padding-left: 40px;
}

h1, h2, h3, h4, h5 {
    margin: 24px 0;
    font-weight: 700;
}

.post-container {
    max-width: 500px;
}

.profile, .social-link {
    margin-bottom: 18px;
}

.profile-picture {
    margin-bottom: 13px;
}

.profile-title {
    color: {color:Heading text};
    font-family: {font:Title};
    font-size : 24px;
    font-weight: 700;
    margin-bottom: 2px;
}

.profile-description {
    font-size : 14px;
}

.social-link {
    bottom: 36px;
    font-size: 24px;
}

.fas, .fa, .fab {
      color : #333;
}

/* Style all font awesome icons */
.social-link a {
  padding-right: 20px;
}

.post-row {
    margin-bottom : 63px;
}

.post-row ul {
    padding-top : 10px;
}

.post-caption {
    padding-top : 12px;
}

.post-text img {
    max-width: 100%;
    height: auto;
}

.post-row p {
    margin-bottom: 12px;
}

figure {
    margin: 0 0 10px;
}

.left-align {
    text-align: left;
    float: left;
}

.right-align {
    text-align: right;
    float: right;
}

.btn {
    border-radius : 0px;
}

.btn-secondary {
    background-color : #333;
}

.footer-wrapper {
  	border-top: 1px solid #eee;
  	padding-top: 24px;
  	font-size: 14px;
	clear: both;
}

svg {
   width:14px;
   height:auto;
   display:block;
   overflow:visible;
}
.controls a {
   height: 18px;
   position:relative;
   display:inline-block;
   overflow:hidden;
   color:#777;
}
.controls .like .liked + svg {
   opacity:1;
}
.controls .like .liked + svg path {
   fill: #333;
}
.controls .like .like_button {
   position:relative;
}
.controls .like .like_button iframe {
   position:absolute;
   top:0;
   left:0;
   bottom:0;
   right:0;
   z-index:2;
   opacity:0;
}

.lightbox {
  border-radius: 5px;
  cursor: pointer;
}

.modal {
  display: none;
  position: fixed;
  z-index: 1;
  overflow: auto;
  padding: 100px 0px 100px 0px;
}

.modal-close {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.9);
}

.modal-content {
  margin: auto;
  display: block;
  width: auto;
  max-width: 700px;
}

.modal-content {
  animation-name: fadeIn;
  animation-duration: 1s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@media only screen and (max-width: 700px) {
  .modal-content {
    width: 100%;
  }
}

/* 100% Image Width on Smaller Screens */
@media only screen and (max-width: 700px){
    .modal-content {
        width: auto;
    }
}

@media screen and (min-width: 1440px) {
    outer-wrapper {
        max-width: 1280px;
    }
}

@media screen and (max-width: 768px) {
    .profile, .social-link {
        position : relative;
        margin-bottom : 24px;
    }

    aside {
        padding: 40px;
    }

    .social-link {
        bottom: 0;
    }
    
    .modal-content {
        width: auto;
        max-width: 100%;
    }
}

{block:IfDarkMode}
body {
    color: #fff;
    background-color: #333;
}

a {
    color : #fff;
}

a:hover {
    color : #ccc;
}

.profile-title {
    color: #fff;
}

.fas, .fa, .fab {
      color : #fff;
}

.controls a {
   color:#777;
}

.controls .like .liked + svg path {
   fill: #fff;
}

.footer-wrapper {
  	border-top: 1px solid #555;
}
{/block:IfDarkMode}

{CustomCSS}
</style>
